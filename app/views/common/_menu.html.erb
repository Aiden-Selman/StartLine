<nav class="navbar navbar-expand-lg navbar-light justify-content-between">
  <%= link_to "StartLine", root_path, class: 'navbar-brand link-info' %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav">
      <%= link_to "Home", root_path, class: 'nav-item nav-link link-info' %>
      <%= link_to "Games", games_path, class: 'nav-item nav-link link-info' %>
      <%= link_to "Genres", genres_path, class: 'nav-item nav-link link-info' %>
      <%= link_to "Platforms", platforms_path, class: 'nav-item nav-link link-info' %>
      <%= link_to "About", about_path, class: 'nav-item nav-link link-info' %>
      <%= link_to "Contact Us", contact_path, class: 'nav-item nav-link link-info' %>
    </div>
  </div>
</nav>
<nav class="breadcrumb" aria-label="breadcrumb">
    <ol>
      <% breadcrumbs.each do |crumb| %>
        <li class="breadcrumb-item d-inline-block<%= ' active' if crumb == breadcrumbs.last %>">
          <% if crumb.link? %>
            <%= link_to crumb.name, crumb.path, class: 'link-info' %>
          <% else %>
            <%= crumb.name %>
          <% end %>
        </li>
      <% end %>
    </ol>
</nav>
<div class="p-1">
  <%= form_tag(search_path, :method => "get") do %>
    <div class="p-1">
      <%= search_field_tag :search, params[:search], placeholder: "Search", class: 'form-control' %>
    </div>
    <div class="p-1">
      <%= button_tag "Search games", class: '' %>
    </div>
  <% end %>
</div>