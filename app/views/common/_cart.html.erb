<main>
  <% if flash[:notice] %>
    <p>
      <%= flash[:notice] %>
    </p>
  <% end %>
</main>
<footer>
  <details>
    <summary>
        Cart
        <% if cart.present? %>
          <sup><%= cart.size %></sup>
        <% end %>
    </summary>
    <% if cart.present? %>
      <ul>
        <% cart.each do |game| %>
          <li>
            <%= game.game_name %> <%= button_to '❌', cart_path(game.id), method: :delete, form_class: "btnRemove" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No items in your cart.</p>
    <% end %>
  </details>
  <% if cart.present? %>
    <p><%= link_to "View Cart", 'checkout/' %></p>
  <% end %>
  <hr>
</footer>
