<h3>Games</h3>

<div class="container text-center">
  <div class="row align-items-start">
    <% @games.each do |game| %>
      <div class="p-2 col-sm-4 border">
        <div class="p-1">
          <%= link_to game.game_name, game, class: 'link-info' %>
        </div>
        <%= render game %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="p-3 col pagination justify-content-center">
      <%= paginate @games %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
