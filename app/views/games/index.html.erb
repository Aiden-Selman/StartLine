<h3>Games</h3>

<div class="container text-center">
  <div class="row align-items-start">
    <% @games.each do |game| %>
      <div class="col-sm-4 border">
        <%= link_to game.game_name, game %>
        <%= render game %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col pagination justify-content-center">
      <%= paginate @games %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
