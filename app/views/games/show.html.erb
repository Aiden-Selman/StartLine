<h1><%= @game.game_name %></h1>
<% if @game.image.present? %>
  <div class="card-image">
    <figure class="image">
      <%# <%= image_tag @game.image.varient(resize_to_limit:[250,250]) %>
      <%= image_tag @game.image %>
    </figure>
  </div>
<% end %>
<p><%= @game.rating%></p>
<p><%= @game.release_date%></p>
<p><%= @genre.genre_name%></p>
<p><%= @platform.platform_name%></p>
<p><%= @game.description%></p>
<p><%= @game.price%></p>
