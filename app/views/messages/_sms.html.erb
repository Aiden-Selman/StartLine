<h4>Send SMS</h4>
<div class="col-lg-4">
  <%= form_tag(messages_send_sms_path, method: :post) do %>
    <div class="form-group col-lg-12">
      <%= label_tag 'Phone Number' %>
      <%= text_field_tag 'phone_number', nil, required: true, class: "form-control" %>
    </div>
    <div class="form-group col-lg-9">
      <%= label_tag 'Message' %>
      <%= text_area_tag 'message', nil, required: true, class: "form-control" %>
    </div>
    <%= submit_tag 'Send SMS', class: "btn btn-primary" %>
  <% end %>
</div>