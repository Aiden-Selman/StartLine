<!DOCTYPE html>
<html>
  <head>
    <title>StartLine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <header>
      <h1>Buy Our Stuff</h1>
      <h3>Make Us Rich</h3>

      <nav>
        <ul>
          <li>
            cart
            <% if cart.present? %>
              <sup><%= cart.size %></sup>
              <ul>
                <% cart.each do |game| %>
                  <li>
                    <%= game.game_name %> <%= button_to '‚ûñ', cart_path(game), method: :delete %>

                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        </ul>
      </nav>

    </header>
    <main>
    <p>
      <%= debug session[:shopping_cart] %>
    </p>
      <% if flash[:notice] %>
        <p>
          <%= flash[:notice] %>
        </p>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <details>
        <summary>
            Cart
            <% if cart.present? %>
              <sup><%= cart.size %></sup>
            <% end %>
        </summary>
        <% if cart.present? %>
          <ul>
            <% cart.each do |game| %>
              <li>
                <%= game.name %> <%= button_to '‚ùå', cart_path(game.id), method: :delete, form_class: "btnRemove" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No items in your cart.</p>
        <% end %>
      </details>
      <hr>
      <p><span>üêê</span> Goats in Coats <span>üß•</span> - Copywrong <%= Time.current.year %></p>
 </footer>
  </body>
    <%= render partial: 'common/menu' %>
      <%= form_tag(search_path, :method => "get") do%>
    <div>
      <%= search_field_tag :search, params[:search], placeholder: "Type", class: "form-control"%>
        <div class="input-group-btn">
          <%= button_tag "Search games", :class => "btn btn-info glyphicon glyphicon-search", :name => nil%>
        </div>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
